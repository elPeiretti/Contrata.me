<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Contratame" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/el_4f9a94</item>
        <item name="colorPrimaryVariant">@color/el_00867d</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/el_80cbc4</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Contratame.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Contratame.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Contratame.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="toolbar_style" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:titleMargin">@dimen/activity_horizontal_margin</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryDark">@color/el_4f9a94</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>


</resources>