<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contendor_mis_servicios"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagen_fila_mi_servicio"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                app:srcCompat="@drawable/descarga" />

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="6"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/estado_mis_servicios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Estado del Servicio"
                    android:textSize="16sp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/nombre_mis_servicio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Nombre del Servicio"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descripcion_mis_servicios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre del Prestador"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/eliminar"
                        android:layout_width="14dp"
                        android:layout_height="29dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        app:srcCompat="@android:drawable/ic_menu_delete" />

                    <ImageView
                        android:id="@+id/modificar"
                        android:layout_width="14dp"
                        android:layout_height="29dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        app:srcCompat="@android:drawable/ic_menu_edit" />

                    <ImageView
                        android:id="@+id/calificar"
                        android:layout_width="14dp"
                        android:layout_height="29dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        app:srcCompat="@android:drawable/btn_star" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>